---
import chica_mobile from "@/assets/images/chica_mobile.png"
import chica_tablet from "@/assets/images/chica_tablet.png"
import chica_desktop from "@/assets/images/chica_desktop.png"
---

<picture class="w-full max-w-[240px] md:max-w-[300px] lg:max-w-[360px] xl:max-w-[400px] 2xl:max-w-[500px] h-auto block absolute -bottom-40 md:-bottom-50 lg:-bottom-60 left-1/2 xl:-left-60 -translate-x-1/2 xl:translate-x-0 icon_girl">
  <source srcset={chica_desktop.src} media="(min-width: 1280px)">
  <source srcset={chica_tablet.src} media="(min-width: 768px)">
  <img class="w-full h-full object-cover relative -left-8 md:left-0" src={chica_mobile.src} alt="Banner sorteo">
</picture>